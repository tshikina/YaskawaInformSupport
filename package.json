{
    "name": "inform-job-support",
    "displayName": "YASKAWA Inform Job Support",
    "description": "Support INFORM JOB JBI for YASKAWA Motoman",
    "publisher": "tshikina",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/tshikina/YaskawaInformSupport.git"
    },
    "version": "0.3.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^14.17.0",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "@vscode/test-electron": "^2.1.2",
        "esbuild": "^0.14.49",
        "eslint": "^8.10.0",
        "mocha": "^9.2.1",
        "typescript": "^4.6.2"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:inform",
        "onLanguage:generaldat",
        "onLanguage:vardat",
        "onLanguage:ionamedat",
        "onLanguage:iomnamedat",
        "onLanguage:pscfile"
    ],
	"main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "inform",
                "aliases": ["inform", "INFORM JBI for YASKAWA Motoman"],
                "extensions": [".JBI"],
                "configuration": "./language-configuration.json"
            },{
                "id": "cioprglst",
                "aliases": ["CIOPRG.LST", "CIOPRG.LST for YASKAWA Motoman"],
                "filenames": ["CIOPRG.LST"],
                "configuration": "./language-configuration.json"
            },{
                "id": "varnamedat",
                "aliases": ["VARNAME.DAT", "VARNAME.DAT for YASKAWA Motoman"],
                "filenames": ["VARNAME.DAT"],
                "configuration": "./language-configuration.json"
            },{
                "id": "vardat",
                "aliases": ["VAR.DAT", "VAR.DAT for YASKAWA Motoman"],
                "filenames": ["VAR.DAT"],
                "configuration": "./language-configuration.json"
            },{
                "id": "ionamedat",
                "aliases": ["IONAME.DAT", "IONAME.DAT for YASKAWA Motoman"],
                "filenames": ["IONAME.DAT", "EXIONAME.DAT"],
                "configuration": "./language-configuration.json"
            },{
                "id": "iomnamedat",
                "aliases": ["IOMNAME.DAT", "IOMNAME.DAT for YASKAWA Motoman"],
                "filenames": ["IOMNAME.DAT"],
                "configuration": "./language-configuration.json"
            },{
                "id": "macrodat",
                "aliases": ["MACRO.DAT", "MACRO.DAT for YASKAWA Motoman"],
                "filenames": ["MACRO.DAT"],
                "configuration": "./language-configuration.json"
            },{
                "id": "generaldat",
                "aliases": ["DAT,PRM,CND", "DAT,PRM,CND files for YASKAWA Motoman"],
                "filenames": [
                    "ABSO.DAT",
                    "ALMHIST.DAT",
                    "APPRBUZR.DAT",
                    "AVDFUNC.DAT",
                    "AXRNGLMT.DAT",
                    "AXSPDMON.DAT",
                    "CRCMON.DAT",
                    "EIOALLOC.DAT",
                    "ENCHEAT.DAT",
                    "ETHERIP.DAT",
                    "FLNAME.DAT",
                    "HCVAR.DAT",
                    "HISPDLOG.DAT",
                    "HNDGUIDE.DAT",
                    "HOME2.DAT",
                    "IFPANEL.DAT",
                    "INTJOB.DAT",
                    "IOMSGHST.DAT",
                    "IPNETCFG.DAT",
                    "JOBMONI.DAT",
                    "KEYALLOC.DAT",
                    "LOGDATA.DAT",
                    "OPEORG.DAT",
                    "PFLFLMT.DAT",
                    "PFLORGP.DAT",
                    "PMHARD.DAT",
                    "PMLOG.DAT",
                    "PMTMMNG.DAT",
                    "PMTRQDB.DAT",
                    "PSEUDOIN.DAT",
                    "RBRNGLMT.DAT",
                    "ROBOMONI.DAT",
                    "RBSTPFCT.DAT",
                    "SETTM.DAT",
                    "SPDLMT.DAT",
                    "STEPDIAG.DAT",
                    "SVMON.DAT",
                    "TLANGMON.DAT",
                    "TMNAME.DAT",
                    "TMVAR.DAT",
                    "TOOLINTF.DAT",
                    "TRQDAT.DAT",
                    "USERMENU.DAT",
                    "USRGRPIN.DAT",
                    "USRGRPOT.DAT",
                    "UWORD.DAT",
                    "YSFLOGIC.DAT",
                    "WEAV.CND",
                    "SHOCKLVL.CND",
                    "CUBEINTF.CND",
                    "PMCOND.CND",
                    "TOOL.CND",
                    "PANELBOX.LOG",
                    "SYSTEM.SYS",
                    "ALL.PRM",
                    "CIO.PRM",
                    "FD.PRM",
                    "FMS.PRM",
                    "MF.PRM",
                    "AMC.PRM",
                    "AP.PRM",
                    "RC.PRM",
                    "RE.PRM",
                    "RO.PRM",
                    "RS.PRM",
                    "SC.PRM",
                    "SD.PRM",
                    "SE.PRM",
                    "SV.PRM",
                    "SVC.PRM",
                    "SVM.PRM",
                    "SVP.PRM",
                    "SVS.PRM"
                ],
                "configuration": "./language-configuration.json"
            },{
                "id": "pscfile",
                "aliases": ["psc", "PSC file for YASKAWA Motoman"],
                "extensions": [".psc"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "inform",
                "scopeName": "source.inform",
                "path": "./syntaxes/inform.tmLanguage.json"
            },{
                "language": "cioprglst",
                "scopeName": "source.cioprglst",
                "path": "./syntaxes/cioprglst.tmLanguage.json"
            },{
                "language": "varnamedat",
                "scopeName": "source.varnamedat",
                "path": "./syntaxes/varnamedat.tmLanguage.json"
            },{
                "language": "vardat",
                "scopeName": "source.vardat",
                "path": "./syntaxes/vardat.tmLanguage.json"
            },{
                "language": "ionamedat",
                "scopeName": "source.ionamedat",
                "path": "./syntaxes/ionamedat.tmLanguage.json"
            },{
                "language": "iomnamedat",
                "scopeName": "source.iomnamedat",
                "path": "./syntaxes/iomnamedat.tmLanguage.json"
                },{
                    "language": "macrodat",
                    "scopeName": "source.macrodat",
                    "path": "./syntaxes/macrodat.tmLanguage.json"
                },{
                "language": "generaldat",
                "scopeName": "source.generaldat",
                "path": "./syntaxes/generaldat.tmLanguage.json"
            },{
                "language": "pscfile",
                "scopeName": "source.pscfile",
                "path": "./syntaxes/psc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "inform",
                "path": "./snippets/inform.code-snippets"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "yaskawaInformLanguageClient.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "yaskawaInformLanguageClient.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-client -- --minify && npm run esbuild-server -- --minify ",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh",
        "esbuild": "npm run esbuild-client -- --sourcemap && npm run esbuild-server -- --sourcemap",
		"esbuild-client": "esbuild ./client/src/extension.ts --bundle --outfile=./client/out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild-server": "esbuild ./server/src/server.ts --bundle --outfile=./server/out/server.js --external:vscode --format=cjs --platform=node",
        "esbuild-watch": "npm run esbuild-client -- --sourcemap --watch && npm run esbuild-server -- --sourcemap --watch",
        "test-compile": "tsc -p ./"
    }
}
